{
  "name": "lost-clothing-brand",
  "version": "1.0.0",
  "description": "Premium streetwear collection - Lost Clothing Brand",
  "keywords": ["fashion", "streetwear", "clothing", "ecommerce", "react", "performance"],
  "author": "Lost Clothing Brand",
  "license": "MIT",
  "homepage": "https://lostclothing.com",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "react-helmet-async": "^1.3.0",
    "jose": "^4.14.4",
    "bcryptjs": "^2.4.3",
    "web-vitals": "^3.3.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "set \"GENERATE_SOURCEMAP=false\" && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "prebuild": "npm run lint && npm run format",
    "postbuild": "echo 'Build completed successfully!'",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "lighthouse": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "performance": "npm run build && npm run lighthouse",
    "optimize-images": "node scripts/optimize-images.js",
    "compress": "gzip -k build/static/js/*.js build/static/css/*.css",
    "bundle-analyzer": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js --port 8888"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.8.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "lighthouse": "^11.0.0",
    "imagemin": "^8.0.0",
    "imagemin-webp": "^8.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lostclothing/lost-clothing-brand.git"
  },
  "bugs": {
    "url": "https://github.com/lostclothing/lost-clothing-brand/issues"
  }
}
